{
    "name": "glowy/arrays",
    "description": "Arrays Component provide a fluent, object-oriented interface for working with arrays, allowing you to chain multiple arrays operations together using a more readable syntax compared to traditional PHP arrays functions.",
    "license": "MIT",
    "keywords": [
        "Arrays", "arrays", "php-arrays", "php", "glowy", "glowyphp"
    ],
    "support": {
      "source": "https://github.com/glowyphp/arrays",
      "issues": "https://github.com/glowyphp/arrays/issues"
    },
    "authors": [
        {
            "name": "Sergey Romanenko",
            "email": "sergey.romanenko@flextype.org",
            "homepage": "https://github.com/Awilum"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "glowy/macroable": "^3.0"
    },
    "autoload":{
        "psr-4": {
            "Glowy\\Arrays\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require-dev": {
        "doctrine/coding-standard": "9.0.0",
        "pestphp/pest": "^1.21.1",
        "phpstan/phpstan": "^1.2.0",
        "symfony/var-dumper": "^5.4.0"
    }
}
